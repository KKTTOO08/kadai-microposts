<% if micropost.okiniirisareta?(current_user) %>
    <%= form_with(model: micropost.favorites.find_by(user_id: current_user.id), method: :delete) do |f| %>
      <%= hidden_field_tag :user_id, micropost.user.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger w-100' %>
    <% end %>
  <% else %>
    <%= form_with(model: micropost.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary w-100' %>
    <% end %>
  <% end %>